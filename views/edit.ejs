<% include ./header %>

<div class="ui secondary top fixed menu" style="background-color: rgb(196, 255, 118)">
    <div class="item"><i class="pencil alternate icon" style="font-size: 2em;"></i>Blog Site</div>
    <a class="item" href="/blogs">Home</a>
    <a class="item" href="/blogs/new">New Post</a>
</div>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" method="POST">
        <div class="field">
          <label>Title</label>
          <input type="text" name="blog[title]" value="<%= blog.title%>">
        </div>
        <div class="field">
          <label>Image</label>
          <input type="text" name="blog[image]" value="<%= blog.image%>">
        </div>
        <div class="field">
            <label>Blog</label>
            <textarea type="text" name="blog[body]" ><%=blog.body%></textarea>
         </div>
        <button class="ui inverted green button" type="submit">Submit</button>
    </form>
</div>